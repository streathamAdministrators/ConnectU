<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :prenom %><br />
    <%= f.text_field :prenom %>
  </div>
  <div class="field">
    <%= f.label :nom %><br />
    <%= f.text_field :nom %>
  </div>
  <div class="field">
    <%= f.label :mail %><br />
    <%= f.text_field :mail %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
	
  <%= f.fields_for :user_information do |builder| %>
	  <div class="field">
	    <%= builder.label :photo %><br />
	    <%= builder.text_field :photo %>
	  </div>
	  <div class="field">
	    <%= builder.label :datenaissance %><br />
	    <%= builder.text_field :datenaissance %>
	  </div>
	  <div class="field">
	    <%= builder.label :lieu %><br />
	    <%= builder.text_field :lieu %>
	  </div>
	  <div class="field">
	    <%= builder.label :siteinternet %><br />
	    <%= builder.text_field :siteinternet %>
	  </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
